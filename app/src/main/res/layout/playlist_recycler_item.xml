<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/playlist_artwork"
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:src="@drawable/default_album_image"
        app:shapeAppearanceOverlay="@style/PlaylistCreatorImageRoundedSquare" />

    <TextView style="@style/PlaylistRecyclerText"
        android:id="@+id/playlist_title"
        android:layout_marginTop="4dp"
        tools:text="Название плейлиста"
        app:layout_constraintTop_toBottomOf="@id/playlist_artwork"/>

    <TextView style="@style/PlaylistRecyclerText"
        android:id="@+id/playlist_tracks_quantity"
        tools:text="100 треков"
        app:layout_constraintTop_toBottomOf="@id/playlist_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>