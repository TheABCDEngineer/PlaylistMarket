<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/fill_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_single</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/text_color_single</item>
        <item name="iconSize">@dimen/main_button_icon_size</item>
    </style>

    <style name="SettingMenuLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_line_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/setting_menu_titles_indent</item>
        <item name="android:layout_marginEnd">@dimen/setting_menu_titles_indent</item>
    </style>

    <style name="SettingMenuTextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/setting_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">4dp</item>

    </style>

    <style name="ActionBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="ImageRoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="TrackSearchViewText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="SearchRefreshButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/theme_hard_text_color</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_update_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
    </style>
</resources>