<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
    <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
    <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
    <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
    <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
    <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <style name="BottomNavigatorIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SettingMenuLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_line_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/setting_menu_titles_indent</item>
        <item name="android:layout_marginEnd">@dimen/setting_menu_titles_indent</item>
    </style>

    <style name="SettingMenuTextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/setting_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">4dp</item>

    </style>

    <style name="ActionBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="ImageRoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="TrackSearchViewText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="SearchRefreshButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/theme_hard_text_color</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_update_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlayerTrackPropertyTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/player_track_properties_margin</item>
        <item name="android:layout_marginLeft">@dimen/player_track_properties_margin</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textColor">@color/theme_soft_text_color</item>
        <item name="android:textSize">@dimen/player_track_properties_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlayerTrackPropertyTitle_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingBottom">@dimen/player_track_properties_margin</item>
        <item name="layout_constraintStart_toStartOf">@id/player_middle_guideline</item>
        <item name="android:textColor">@color/theme_soft_text_color</item>
        <item name="android:textSize">@dimen/player_track_properties_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlayerTrackPropertyValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginEnd">@dimen/player_track_properties_margin</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/player_track_properties_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="PlayerTrackPropertyValue_land">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">@id/player_right_guideline</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/player_track_properties_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>