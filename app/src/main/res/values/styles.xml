<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingMenuTextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/setting_menu_titles_margin</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/setting_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">24dp</item>

    </style>

    <style name="ActionBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="ImageRoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="TrackSearchViewText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="SearchRefreshButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/theme_hard_text_color</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_update_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlayerTrackPropertyTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/player_track_properties_margin</item>
        <item name="android:layout_marginLeft">@dimen/player_track_properties_margin</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textColor">@color/theme_soft_text_color</item>
        <item name="android:textSize">@dimen/player_track_properties_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlayerTrackPropertyTitle_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingBottom">@dimen/player_track_properties_margin</item>
        <item name="layout_constraintStart_toStartOf">@id/player_middle_guideline</item>
        <item name="android:textColor">@color/theme_soft_text_color</item>
        <item name="android:textSize">@dimen/player_track_properties_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlayerTrackPropertyValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginEnd">@dimen/player_track_properties_margin</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/player_track_properties_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="PlayerTrackPropertyValue_land">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">@id/player_right_guideline</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="android:textSize">@dimen/player_track_properties_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/theme_hard_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:scaleX">0.75</item>
        <item name="android:scaleY">0.75</item>
        <item name="buttonTint">@color/bottom_navigator_item_checked</item>
    </style>
</resources>