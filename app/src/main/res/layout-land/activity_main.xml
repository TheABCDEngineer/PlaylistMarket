<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical"
    android:padding="@dimen/main_common_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/app_name"
        android:textColor="@color/main_title"
        android:textFontWeight="500"
        android:textSize="@dimen/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_color"
        android:orientation="horizontal"
        android:padding="@dimen/main_common_margin">

        <Button
            android:id="@+id/main_SearchButton"
            style="@style/MainButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/search"
            app:icon="@drawable/search_icon" />

        <Button
            android:id="@+id/main_MediaLibraryButton"
            style="@style/MainButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/media_library"
            app:icon="@drawable/media_library_icon" />

        <Button
            android:id="@+id/main_SettingsButton"
            style="@style/MainButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"
            android:text="@string/settings"
            app:icon="@drawable/settings_icon" />
    </LinearLayout>
</LinearLayout>