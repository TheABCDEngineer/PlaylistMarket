<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.playlistmarket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlaylistMarket"
        tools:targetApi="31">
        <activity
            android:name=".features.player.ui.PlayerActivity"
            android:exported="false" />
        <activity
            android:name=".features.setting.ui.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".features.search.ui.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".features.medialibrary.ui.MediaLibraryActivity"
            android:exported="false" />
        <activity
            android:name=".features.main.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>